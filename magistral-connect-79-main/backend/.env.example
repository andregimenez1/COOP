# Database
DB_HOST="localhost"
DB_PORT="3306"
DB_USER="root"
DB_PASS=""
DB_NAME="magistral_connect"
DATABASE_URL="mysql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# JWT Secret (use um valor seguro em produção)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
